set virtual_spoolfile=yes

virtual-mailboxes \
    "INBOX"     "notmuch://?query=tag:inbox and NOT tag:spam and date:2M..0s"\
    "Pin"       "notmuch://?query=tag:flagged"\
    "Unread"    "notmuch://?query=tag:unread and NOT folder:spam"\
    "Sent"      "notmuch://?query=tag:sent and date:2M..0s"\
    "THUEE"     "notmuch://?query=tag:thuee"\
    "TUNA"      "notmuch://?query=tag:tuna"\
    "NICS"      "notmuch://?query=tag:nics"

tag-transforms \
    "attachment" "📎 " \
	"replied" "↩ " \
    "flagged" "⭐ " \
    "signed" "✏ " \
	"encrypted" "🔐  " \
    "athena" "❤  " \
    "tuna" "🐬 " \
    "nics" "🇳 " \
    "thuee" "🇪 "

set nm_hidden_tags = "unread,draft,passed,inbox,sent"
set nm_query_type = threads

