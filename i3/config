bindsym $mod+F5 workspace F5
bindsym $Hyper+1 workspace F1
bindsym $Hyper+2 workspace F2
bindsym $Hyper+3 workspace F3
bindsym $Hyper+4 workspace F4
bindsym $Hyper+5 workspace F5
bindsym $mod+minus scratchpad show
bindsym $mod+q  workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+F1 move container to workspace F1
bindsym $mod+Shift+F2 move container to workspace F2
bindsym $mod+Shift+F3 move container to workspace F3
bindsym $mod+Shift+F4 move container to workspace F4
bindsym $mod+Shift+F5 move container to workspace F5
bindsym $Hyper+Shift+1 move container to workspace F1
bindsym $Hyper+Shift+2 move container to workspace F2
bindsym $Hyper+Shift+3 move container to workspace F3
bindsym $Hyper+Shift+4 move container to workspace F4
bindsym $Hyper+Shift+5 move container to workspace F5
bindsym $mod+Shift+minus move scratchpad

bindsym $mod+Shift+Left move container to output left
bindsym $mod+Shift+Right move container to output right
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym Mod1+Ctrl+l exec i3lock -c 111111

# Audio shortcuts
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioMute exec amixer set Master toggle

# TouchPad
bindsym XF86TouchpadToggle exec ~/.i3/touchpadtoggle.sh

# Backlight
bindsym XF86MonBrightnessUp  exec  xbacklight -inc 10
bindsym XF86MonBrightnessDown  exec  xbacklight -dec 10

exec ~/.i3/autostart.sh

